<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.5">

        <france.bosch.estelle.android_hotlemon.ArticleImageView
            android:layout_width="match_parent"
            android:layout_height="251dp"
            app:srcCompat="@drawable/amal"
            android:id="@+id/article_image_view"
            android:layout_weight="0.02"
            android:layout_alignParentStart="true" />
    </FrameLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:layout_alignBottom="@+id/article_image_view"
        android:layout_alignParentStart="true"
        android:background="?android:attr/colorButtonNormal"
        android:layout_weight="0.04">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.05"
            android:weightSum="1">

            <TextView
                android:text="Date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/date"
                android:textColor="@android:color/background_light"
                android:gravity="center_vertical"
                android:paddingLeft="10dp" />

            <TextView
                android:text="miskinalien"
                android:layout_width="129dp"
                android:layout_height="wrap_content"
                android:id="@+id/user"
                android:textColor="@android:color/background_light"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:layout_weight="0.96" />

            <TextView
                android:text="Insolite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/category"
                android:textColor="@android:color/background_light"
                android:gravity="center_vertical"
                android:paddingLeft="10dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.05"
            android:weightSum="1">

            <TextView
                android:text="Titre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/titre"
                android:textColor="@android:color/background_light"
                android:textAlignment="center"
                android:gravity="center"
                android:layout_weight="1" />

            <TextView
                android:text="7km"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/distance"
                android:textAlignment="center"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.05">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.02"
                android:gravity="center_horizontal">

                <android.support.design.widget.FloatingActionButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    app:fabSize="mini"
                    app:srcCompat="@android:drawable/alert_light_frame"
                    android:id="@+id/floatingActionButton2"
                    android:layout_weight="1"
                    app:backgroundTint="@android:color/holo_blue_light"
                    android:layout_gravity="center_horizontal|center" />

                <android.support.design.widget.FloatingActionButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    app:fabSize="mini"
                    app:srcCompat="@android:drawable/alert_dark_frame"
                    android:id="@+id/floatingActionButton"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    app:backgroundTint="?android:attr/colorActivatedHighlight" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:id="@+id/article_description"
        android:layout_marginTop="10dp"
        android:textAlignment="center" />

</LinearLayout>