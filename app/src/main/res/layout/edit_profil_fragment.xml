<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="115dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="1">

            <TextView
                android:text="Photo de profil"
                android:layout_width="194dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                android:textSize="25sp"
                android:layout_weight="1.13" />

            <Button
                android:text="Parcourir..."
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:id="@+id/button2"
                android:background="@color/colorAccent"
                style="@android:style/Widget.Button"
                android:textColor="@android:color/white"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>

        <ImageView
            android:layout_width="177dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/amal"
            android:id="@+id/imageView4" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="E-mail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:layout_weight="0.04"
            android:textSize="25sp"
            android:layout_alignParentTop="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText2"
            android:layout_below="@+id/textView5"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:hint="Silvermoon" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_below="@+id/textView6"
            android:layout_alignParentStart="true"
            android:id="@+id/editText3"
            android:layout_alignParentEnd="true"
            android:hint="Estelle" />

        <TextView
            android:text="Nom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            android:textSize="25sp"
            android:layout_below="@+id/editText3"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/editText"
            android:hint="estelle.pereira@gmail.com"
            android:layout_weight="1"
            android:layout_below="@+id/textView4"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="PrÃ©nom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:textSize="25sp"
            android:layout_below="@+id/editText2"
            android:layout_alignParentStart="true"
            android:layout_marginTop="16dp" />

        <Button
            android:text="Enregistrer "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button3"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@color/colorAccent" />

        <TextView
            android:text="Pseudo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:layout_weight="0.04"
            android:textSize="25sp"
            android:layout_below="@+id/editText"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText4"
            android:hint="Pereira"
            android:layout_below="@+id/textView7"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true" />

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:fabSize="mini"
            app:srcCompat="@drawable/web_hi_res_512"
            android:id="@+id/floatingActionButton7"
            android:layout_below="@+id/textView4"
            android:layout_alignParentEnd="true"
            app:backgroundTint="@android:color/transparent"
            app:rippleColor="@android:color/transparent"
            android:tint="@android:color/transparent" />

    </RelativeLayout>

</LinearLayout>