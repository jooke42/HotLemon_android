<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="france.bosch.estelle.android_hotlemon.MainActivity"
    android:weightSum="1"
    android:orientation="vertical">

    <GridView
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:id="@+id/grid_article"
        android:layout_above="@+id/fab_create_article"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="12dp"
        android:numColumns="2"/>

    <android.support.design.widget.FloatingActionButton
        android:layout_width="67dp"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:fabSize="normal"
        app:srcCompat="@android:drawable/ic_input_add"
        android:id="@+id/fab_create_article"
        android:layout_weight="0.16"
        android:tint="@android:color/white"
        app:rippleColor="?attr/colorPrimaryDark"
        app:elevation="1dp"
        android:visibility="visible"
        app:useCompatPadding="false"
        android:adjustViewBounds="false"
        android:layout_gravity="right"
        app:backgroundTint="@color/colorAccent"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="13dp"
        android:layout_marginEnd="11dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>