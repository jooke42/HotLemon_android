<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="197dp"
        android:layout_height="159dp">


        <ImageView
            android:id="@+id/voyage_image"
            android:layout_width="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/amal"
            android:layout_height="300px"
            android:layout_alignParentBottom="true" />

        <TextView
            android:text="User"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/article_location"
            android:fontFamily="sans-serif"
            android:textSize="24sp"
            android:textColor="@android:color/white"
            android:textAlignment="center"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="Titre article "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/article_title"
            android:fontFamily="sans-serif"
            android:textSize="36sp"
            android:textColor="@android:color/white"
            android:textAlignment="center"
            android:layout_above="@+id/article_location"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="Km"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/article_user"
            android:fontFamily="sans-serif"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:textAlignment="center"
            android:layout_below="@+id/article_location"
            android:layout_alignParentStart="true" />

    </RelativeLayout>


</LinearLayout>